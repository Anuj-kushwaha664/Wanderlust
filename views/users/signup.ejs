<% layout("./layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-6 offset-3">  
        <h2>SignUp to WanderLust</h2>
    </div>
    <div class="col-6 offset-3 mb-3">  
        <form action="/users/signup" method="post" novalidate class="needs-validation">
            <div class="mb-3">
                <!-- mb-3 stand for margin-bottom : 3  -->
                <label for="username" class="form-label">Username</label>
                <input id="username" name="username" class="form-control" type="text" placeholder="Enter username" required>
                <div class="invalid-feedback">
                    Please enter username
                </div>
                <div class="valid-feedback">
                    looks good!
                </div>
            </div>
            <div class="mb-3">
                <!-- mb-3 stand for margin-bottom : 3  -->
                <label for="email" class="form-label">Email</label>
                <input id="email" name="email" class="form-control" type="email" placeholder="Enter your email" required>
                <div class="invalid-feedback">
                    Please enter valid Email
                </div>
                <div class="valid-feedback">
                    looks good!
                </div>
            </div>
            <div class="mb-3">
                <!-- mb-3 stand for margin-bottom : 3  -->
                <label for="password" class="form-label">Password</label>
                <input id="password" name="password" class="form-control" type="password" placeholder="Enter password" required>
                <div class="invalid-feedback">
                    Please enter password
                </div>
                <div class="valid-feedback">
                    looks good!
                </div>
            </div>

            <button class="btn btn-success">Signup</button>

        </form>
    </div>
    <hr>
    <div class="col-6 offset-3 mt-1 mb-2"> 
        <a class="btn btn-danger" href="/auth/google">Login with Google</a> 
    </div>
</div>